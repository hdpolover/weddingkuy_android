<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randika.kamimomen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.Camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KamiMomen"
        android:usesCleartextTraffic="true">
        <activity android:name=".TentangAplikasiActivity" />
        <activity android:name=".DetailLokasiActivity" />
        <activity android:name=".ArahLokasiActivity" />
        <activity android:name=".AdminDaftarAdminActivity" />
        <activity android:name=".AdminTambahAdminActivity" />
        <activity android:name=".AdminTambahLokasiActivity" />
        <activity android:name=".AdminLokasiActivity" />
        <activity android:name=".TambahPengantinActivity" />
        <activity android:name=".PengantinAdminActivity" />
        <activity android:name=".QrScannerActivity" />
        <activity android:name=".LoginPengantinActivity" />
        <activity android:name=".BerandaPengantinActivity" />
        <activity android:name=".BerandaAdminActivity" />
        <activity android:name=".LoginAdminActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>